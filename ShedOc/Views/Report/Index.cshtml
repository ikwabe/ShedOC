@model ShedOc.Models.Reports

@{
    ViewBag.Title = "Index";
}


<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("ShedOC", "Index", "Report", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Sign Out", "SignOut", "Home")</li>
                <li>@Html.ActionLink("Reports", "Index", "Report")</li>
                <li><a href="#">Activity</a></li>
            </ul>
        </div>
    </div>
</div>
<br />
<br />
<style>
    .mystyle {
        font-family: Calibri;
        font-size: 16px;
    }
    .control-label{
            font-family: Calibri;
            font-size: 14px;
        }
    .labelColor {
        color: black;
        font-weight: normal;
        font-variant-caps: all-petite-caps;
    }

    .cursor {
        cursor: pointer;
    }
</style>
<h2>Reports</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reports</h4>
        <hr />

    </div>

}<div class="form-group">

    <div class="col-md-offset-2 col-md-10 form-group">
        <label class="mystyle labelColor">Select a type of report you want to view from the list below</label>
    </div>

    <div class="col-md-offset-2 col-md-10 form-group">

        <input type="button" name="sales" value="Sales Report " class="btn btn-default form-control" onclick="location.href='@Url.Action("Index","SalesReport")'" />

    </div>

    <div class="col-md-offset-2 col-md-10 form-group">

        <input type="button" name="purchase" value="Purchase Report " class="btn btn-default form-control" onclick="location.href='@Url.Action("Index","Purchases")'" />

    </div>

    <div class="col-md-offset-2 col-md-10 form-group">

        <input type="button" name="lab" value="Laboratory Test Report " class="btn btn-default form-control" onclick="location.href='@Url.Action("Index","LabTest")'" />

    </div>

    <div class="col-md-offset-2 col-md-10 form-group">

        <input type="button" name="pacient" value="Patient Visit Report " class="btn btn-default form-control" onclick="location.href='@Url.Action("Index","PatientVisit")'" />

    </div>

    <div class="col-md-offset-2 col-md-10 form-group">

        <input type="button" name="pharm" value="Pharmacy Sales Report " class="btn btn-default form-control" onclick="location.href='@Url.Action("Index","PharmacySales")'" />

    </div>

</div>


